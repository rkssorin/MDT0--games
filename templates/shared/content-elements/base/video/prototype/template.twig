{% macro render(elementId = null, elementPartId = null, videoURL = null) %}{% apply spaceless %}
    {% deprecated 'The usage of "element.render(...)" is deprecated, use "include ... with {...}" instead. For detailed information, visit: https://github.com/bsi-software/bsi-cx-design-master-template-web/blob/main/MIGRATION_GUIDE.md"' %}
    {% include './template.twig' %}
{% endapply %}{% endmacro %}

{% apply spaceless %}
    {% set videoElementId = elementId ?: 'video-C4cbKm' %}
    {% set videoElementPartId = elementPartId ?: 'video-part-loPxhG' %}
    {% set videoURL = (videoURL ?: properties.videoURL) ?: 'https://www.youtube.com/embed/Ekc_4btc-iM' %}

    <div data-bsi-element="{{ videoElementId }}" class="video {{ 'bsi-element-' ~ videoElementId }} mb-3">
        <div class="responsive-video" data-bsi-element-part="{{ videoElementPartId }}" data-bsi-video-data-link="{{ videoURL }}">
            <iframe width="1120" height="630" src="{{ videoURL }}" allow="autoplay; encrypted-media" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        </div>
    </div>
{% endapply %}