{% macro render(elementId = null, elementPartId = null, formTextPartId = null, errorRequiredPartId = null, errorInvalidPartId = null, labelText = null, infoText = null, errorRequiredText = null, errorInvalidText = null) %}
	{% apply spaceless %}
	{% deprecated 'The usage of "element.render(...)" is deprecated, use "include ... with {...}" instead. For detailed information, visit: https://github.com/bsi-software/bsi-cx-design-master-template-web/blob/main/MIGRATION_GUIDE.md"' %}
	{% include './template.twig' %}
	{% endapply %}
{% endmacro %}

{% apply spaceless %}
{% set formFieldElementId = elementId ?: 'form-field-betnumber' %}
{% set formFieldElementPartId = elementPartId ?: 'form-field-part-bet345' %}
{% set formFieldElementPartId2 = elementPartId2 ?: 'form-field-part-bet346' %}
{% set formFieldTextPartId = formTextPartId ?: 'form-field-part-text-T9yfhp' %}
{% set formFieldErrorRequiredPartId = errorRequiredPartId ?: 'form-field-part-error-required-904DIx' %}
{% set formFieldErrorInvalidPartId = errorInvalidPartId ?: 'form-field-part-error-invalid-5g1mUc' %}

{% set formArrowUp = imageSrc ?: bsi_cx_asset('../../../../static/bet-arrow-up.svg') %}
{% set formArrowDown = imageSrc ?: bsi_cx_asset('../../../../static/bet-arrow-down.svg') %}

{% set formFieldLabelText = (labelText ?: properties.formFieldLabelText) ?: bsi_cx_lorem(3) %}
{% set formFieldInfoText = (infoText ?: properties.formFieldInfoText) ?: "" %}
{% set formFieldErrorRequiredText = (errorRequiredText ?: properties.errorRequiredText) ?: 'Bitte füllen Sie dieses Feld aus.' %}
{# TODO: make translatable #}
{% set formFieldErrorInvalidText = (errorInvalidText ?: properties.errorInvalidText) ?: 'Der Wert, den Sie für dieses Feld eingegeben haben, ist ungültig.' %}
{# TODO: make translatable #}

<div x-data="formFieldBet" data-bsi-element="{{ formFieldElementId }}" class="{{ 'bsi-element-' ~ formFieldElementId }} mb-4 bsi-form-element bsi-form-field-element bsi-form-flex-label bet_container">
	<div data-bsi-element-part="{{ formFieldElementPartId }}" class="hometeam" x-init="initFormFieldBetInput">
		<div class="bsi-form-input-element bsi-label-floating-element mb-3 hometeam">
			<label for="field" class="form-label">Home Team</label>
			<span class="score-modifier scoremodif-up" data-op="1"></span>
			<input type="number" class="form-control bsi-form-field-input hometeams-score" id="field" value="0">
			<span class="score-modifier scoremodif-down disabled" data-op="-1"></span>
		</div>
	</div>
	<span class="team_spacer">:</span>
	<div data-bsi-element-part="{{ formFieldElementPartId2 }}" class="visitors" x-init="initFormFieldBetInput">
		<div class="bsi-form-input-element bsi-label-floating-element mb-3 ">
			<label for="field2" class="form-label">Visitors</label>
			<span class="score-modifier scoremodif-up" data-op="1"></span>
			<input type="number" class="form-control bsi-form-field-input visitors-score" id="field2" value="0">
			<span class="score-modifier scoremodif-down disabled" data-op="-1"></span>
		</div>
	</div>
</div>
{% endapply %}
