{% extends '_layout.twig' %}

{% set colTwoLeftContentElements = [ 'base/h1', 'base/h2', 'base/h3', 'base/text', 'base/button'] %}
{% set colTwoRightContentElements = [ 'base/figure'] %}
{% set colOneContentElements = [ 'base/table', 'layout/spacer', 'base/accordion', 'base/news-snippet', 'layout/spacer', 'base/video', 'layout/spacer', 'base/social-media-share'] %}
{% set formElements = [ 'base/h2', 'form/multi-column', 'form/form-field-tel', 'form/text-area', 'form/select', 'form/checkbox', 'form/radio'] %}
{% set colThreeContentElements = [ 'base/card'] %}
{% set colFourContentElements = [ 'base/figure'] %}


{% block navigation %}
	{{ source('./includes/navigation/template.hbs')|raw }}
{% endblock %}

{% block logo %}
	{% include './includes/logo/template.twig' %}
{% endblock %}

{% block header %}
	{% include './includes/header/template.twig' %}
{% endblock %}

{% block content %}
	{% include './includes/page/template.twig' %}

	{% block main %}

		{% embed '../shared/content-elements/layout/col-two/template.twig' %}
			{% block col_two_dropzone_1 %}

				{% for element in colTwoLeftContentElements %}
					{% include '../shared/content-elements/' ~ element ~ '/template.twig' %}
				{% endfor %}

			{% endblock %}
			{% block col_two_dropzone_2 %}

				{% for element in colTwoRightContentElements %}
					{% include '../shared/content-elements/' ~ element ~ '/template.twig' %}
				{% endfor %}

			{% endblock %}
		{% endembed %}

		{% include '../shared/content-elements/layout/spacer/template.twig' %}

		{% embed '../shared/content-elements/layout/col-one/template.twig' %}
			{% block col_one_dropzone %}

				{% for element in colOneContentElements %}
					{% include '../shared/content-elements/' ~ element ~ '/template.twig' %}
				{% endfor %}

				{% include '../shared/content-elements/layout/spacer/template.twig' %}

				{% embed '../shared/content-elements/form/form-container/template.twig' %}
					{% block form_container_dropzone %}

						{% for element in formElements %}
							{% include '../shared/content-elements/' ~ element ~ '/template.twig' %}
						{% endfor %}

					{% endblock %}
				{% endembed %}

			{% endblock %}
		{% endembed %}

		{% include '../shared/content-elements/layout/spacer/template.twig' %}

		{% embed '../shared/content-elements/layout/col-three/template.twig' %}
			{% block col_three_dropzone_1 %}

				{% for element in colThreeContentElements %}
					{% include '../shared/content-elements/' ~ element ~ '/template.twig' %}
				{% endfor %}

			{% endblock %}
			{% block col_three_dropzone_2 %}

				{% for element in colThreeContentElements %}
					{% include '../shared/content-elements/' ~ element ~ '/template.twig' %}
				{% endfor %}

			{% endblock %}
			{% block col_three_dropzone_3 %}

				{% for element in colThreeContentElements %}
					{% include '../shared/content-elements/' ~ element ~ '/template.twig' %}
				{% endfor %}

			{% endblock %}
		{% endembed %}

		{% include '../shared/content-elements/layout/spacer/template.twig' %}

		{% embed '../shared/content-elements/layout/col-four/template.twig' %}
			{% block col_four_dropzone_1 %}

				{% for element in colFourContentElements %}
					{% include '../shared/content-elements/' ~ element ~ '/template.twig' %}
				{% endfor %}

			{% endblock %}
			{% block col_four_dropzone_2 %}

				{% for element in colFourContentElements %}
					{% include '../shared/content-elements/' ~ element ~ '/template.twig' %}
				{% endfor %}

			{% endblock %}
			{% block col_four_dropzone_3 %}

				{% for element in colFourContentElements %}
					{% include '../shared/content-elements/' ~ element ~ '/template.twig' %}
				{% endfor %}

			{% endblock %}
			{% block col_four_dropzone_4 %}

				{% for element in colFourContentElements %}
					{% include '../shared/content-elements/' ~ element ~ '/template.twig' %}
				{% endfor %}

			{% endblock %}
		{% endembed %}

	{% endblock %}

{% endblock %}

{% block footer %}
	{% embed './includes/footer/template.twig' %}
		{% block footer_element %}
			{% embed '../shared/content-elements/layout/col-one/template.twig' with {
                colOneAlignment: 'bsi-col-align-center'
            } %}
				{% block col_one_dropzone %}
					{% include '../shared/content-elements/base/social-media-follow/template.twig' with {
                        iconColor: 'bsi-icon-color-light'
                    } only %}
				{% endblock %}
			{% endembed %}
		{% endblock %}
	{% endembed %}
{% endblock %}
